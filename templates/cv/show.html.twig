{% extends 'base.html.twig' %}

{% block title %}Cv{% endblock %}

{% block body %}
    <h1>Cv</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cv.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ cv.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cv.nom }}</td>
            </tr>
            <tr>
                <th>DateNaiss</th>
                <td>{{ cv.dateNaiss ? cv.dateNaiss|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ cv.adresse }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ cv.tel }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ cv.mail }}</td>
            </tr>
            <tr>
                <th>AnneesExperience</th>
                <td>{{ cv.anneesExperience }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cv_index') }}">back to list</a>

    <a href="{{ path('cv_edit', {'id': cv.id}) }}">edit</a>

    {{ include('cv/_delete_form.html.twig') }}
